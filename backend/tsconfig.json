{
  "compilerOptions": {
    "module": "esnext",
    /* Base Options */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "verbatimModuleSyntax": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",

    /* Demoting tsc from transpiler to IDE-based linter */
    "moduleResolution": "Bundler",
    "noEmit": true,
    
    /* Non-browser library typings */
    "lib": ["ES2022"],

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    
  },
  "include": [
    "src"
  ],
}